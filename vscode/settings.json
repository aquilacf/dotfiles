{
    // Telemetry
    "telemetry.telemetryLevel": "off",
    // Updates
    "update.showReleaseNotes": false,
    "update.mode": "none",
    // Files
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // Window
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "off",
    // .NET
    "dotnet.autoDetect": "on",
    "dotnetAcquisitionExtension.enableTelemetry": false,
    // Extensions
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    // AWS
    "aws.telemetry": false,
    "aws.codeWhisperer.includeSuggestionsWithCodeReferences": false,
    "aws.codeWhisperer.importRecommendation": false,
    "aws.codeWhisperer.shareCodeWhispererContentWithAWS": false,
    // Vim
    "vim.surround": true,
    "vim.camelCaseMotion.enable": true,
    "vim.hlsearch": true,
    "vim.smartcase": true,
    "vim.normalModeKeyBindings": [
        {
            "before":["<Esc>"],
            "commands": [
                ":nohl",
                "removeSecondaryCursors"
            ],
            "silent": true
        }
    ],
    // Editor
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.codeLensFontSize": 10,
    "editor.fontFamily": "FiraCode Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.scrollbar.vertical": "hidden",
    "editor.hideCursorInOverviewRuler": true,
    "editor.overviewRulerBorder": false,
    "editor.fontSize": 14,
    "editor.detectIndentation": true,
    "editor.lineNumbers": "relative",
    "editor.fontLigatures": false,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.guides.highlightActiveIndentation": true,
    "editor.foldingImportsByDefault": true,
    "editor.smoothScrolling": true,

    // Workbench
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right",
    "workbench.activityBar.location": "side",
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 10,
    // "workbench.colorCustomizations": {
    //     "editorOverviewRuler.border": "#0000",
    //     "editorOverviewRuler.findMatchForeground": "#0000",
    //     "editorOverviewRuler.rangeHighlightForeground": "#0000",
    //     "editorOverviewRuler.selectionHighlightForeground": "#0000",
    //     "editorOverviewRuler.wordHighlightForeground": "#0000",
    //     "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
    //     "editorOverviewRuler.modifiedForeground": "#0000",
    //     "editorOverviewRuler.addedForeground": "#0000",
    //     "editorOverviewRuler.deletedForeground": "#0000",
    //     "editorOverviewRuler.errorForeground": "#0000",
    //     "editorOverviewRuler.warningForeground": "#0000",
    //     "editorOverviewRuler.infoForeground": "#0000",
    //     "editorOverviewRuler.bracketMatchForeground": "#0000"
    // },
    "workbench.editor.enablePreview": true,
    "workbench.statusBar.visible": true,

    // Explorer
    "explorer.decorations.badges": false,
    "explorer.decorations.colors": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.excludeGitIgnore": false,
    // GIT
    "git.confirmSync": false,
    "git.autofetch": true,

    // REST Client
    "rest-client.enableTelemetry": false,

    // Theme
    "workbench.preferredDarkColorTheme": "Visual Studio 2019 Dark",
    "workbench.preferredLightColorTheme": "Visual Studio 2019 Light",
    "workbench.iconTheme": "eq-material-theme-icons-light",

    // Programming
    "debug.toolBarLocation": "commandCenter",

    // Other


    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },




}
